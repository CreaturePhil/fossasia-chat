extends layout

block content
  ul.nav.nav-tabs
    li: a(href="javascript:void(0)"): b.text-primary Fossasia Chat
    li.active: a(href="#home" data-toggle="tab") Home
    li: a(href="#about" data-toggle="tab") About

  .tab-content
    .tab-pane.fade.in.active#home(role="tabpanel")
      ul.messages
    .tab-pane.fade#about(role="tabpanel")
      h1 World

  input.inputMessage.form-control(type="text")
